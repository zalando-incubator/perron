{
  "name": "perron",
  "version": "0.9.0",
  "description": "A sane client for web services",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "dist/client.js",
  "scripts": {
    "prepublishOnly": "npm run test",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "test": "npm run lint && tsc && mocha --exit test",
    "test-cov": "npm run lint && tsc && nyc --check-coverage --lines 90 --functions 85 --branches 85 mocha --exit test",
    "tdd": "mocha test --exit --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zalando-incubator/perron.git"
  },
  "files": [
    "dist/*"
  ],
  "types": "./dist/client.d.ts",
  "author": "Team Pathfinder <team-pathfinder@zalando.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.49",
    "@types/retry": "^0.12.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "retry": "^0.12.0"
  }
}
