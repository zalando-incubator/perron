{
  "name": "perron",
  "version": "0.6.0",
  "description": "A sane client for web services",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/client.js",
  "scripts": {
    "prepublishOnly": "npm run test && npm run docs",
    "test": "tslint --project . && tsc && mocha test",
    "test-cov": "tslint . && tsc && nyc --check-coverage --lines 95.26 --functions 94.87 --branches 86.41 mocha test",
    "tdd": "mocha test --watch",
    "docs": "jsdoc2md dist/client.js > api.md"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zalando-incubator/perron.git"
  },
  "files": [
    "dist/*",
    "*.md"
  ],
  "types": "./dist/client.d.ts",
  "author": "Team Pathfinder <team-pathfinder@zalando.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.0",
    "@types/retry": "^0.10.2",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "proxyquire": "^2.1.0",
    "sinon": "^6.1.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@types/circuit-breaker-js": "^0.0.1",
    "circuit-breaker-js": "^0.0.1",
    "retry": "^0.12.0"
  }
}
